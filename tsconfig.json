      "@/components/*": ["src/components/*"],
      "@/pages/*": ["src/pages/*"],
      "@/apis/*": ["src/apis/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/store/*": ["src/store/*"],
      "@/utils/*": ["src/utils/*"],
      "@/assets/*": ["src/assets/*"],
